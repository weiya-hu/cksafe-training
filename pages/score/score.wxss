/* pages/score/score.wxss */
.questions{display: flex;flex-wrap: wrap;padding: 10rpx;}
.questionitem{width: 50rpx;height: 50rpx;line-height: 50rpx;font-size: 28rpx; text-align: center ;border-radius: 50%;border: 1px solid #1BD0BD;margin: 15rpx 25rpx;color: #1BD0BD;}
.right{background: #1BD0BD;color: #ffffff;}
.top{padding: 80rpx 0; border-bottom: 4px solid #C9D9D8;}
.score{font-size: 50rpx;font-weight: bold;}
.totlescore{font-size: 30rpx;}
.questiontype{margin: 30rpx 30rpx 15rpx;padding-left: 12rpx;font-size: 32rpx;border-left:2px solid #1BD0BD;}
.false{background: #EC635D;border: 1px solid #EC635D;color: #ffffff;}
.point{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background: rgba(0,0,0,0.5)}
.pointsus{position: absolute;top: 50%;left: 50%;transform: translateX(-50%) translateY(-50%);width: 80%;display: flex;flex-wrap: wrap;justify-content: center;align-items: center;}
.sure{padding: 10rpx 20rpx;letter-spacing: 4px;color: #ffffff;font-weight: bold;background: #1BD0BD;border-radius: 4px}
.getscoreimg{width: 80%}
.pointtxt{font-size: 32rpx;text-align: center;margin: 20rpx 0;width: 100%;font-weight: bold;color: #ffffff;}