/* pages/video/video.wxss */
.vidoe{padding: 30rpx 0 0;}
.videoitem{position: relative;width: 40%;margin: 10rpx 5%;display: inline-block;vertical-align: middle;overflow: hidden}
.coverimg{width: 100%;border-radius: 4px;overflow: hidden;position: relative;height: 160rpx}
.playimg{position: absolute;top: 50%;left: 50%;transform: translateX(-50%) translateY(-50%);width: 100rpx;}
.videotitle{width: 100%; height: 80rpx;}
.videotitleson{width: 100%; text-align: left; font-size: 32rpx;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.studied{background: rgba(3,200,121,0.5);color: #ffffff;position: absolute;top: 30rpx;right:-50rpx;transform: rotate(45deg);font-size: 24rpx;
  padding: 0 50rpx;}
.unstudy{background: rgba(206,83,90,0.8);color: #ffffff;position: absolute;top: 30rpx;right:-50rpx;transform: rotate(45deg);font-size: 24rpx;
  padding: 0 50rpx;}
.titlestudied{color: #bbb}
