/* pages/exercise/exercise.wxss */
.exercise{background: #ffffff;overflow: hidden}
.topl{width:8rpx;height: 40rpx;background:#B19B80;margin-right: 6rpx; border-radius: 6rpx;}
.content .bord{border: 1px solid #B19B80}

.right{color:#ffffff;background: #B19B80}
.titletop{width: 100%;height: 110rpx;padding: 0 30rpx;box-sizing: border-box; border-bottom: 1rpx solid #aaa;font-size: 36rpx;position: relative;}
.titleitem{background: #ffffff;width:100%;}
.titletxt{font-size: 40rpx;margin: 10rpx 0;margin-bottom: 100rpx;}
.titlenum{position: absolute;top: 50%;left: 50%;transform: translateX(-50%) translateY(-50%)}
.idx{font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;color: #B19B80;font-weight: bold;font-size: 46rpx;margin-right: 6rpx}
.title{padding: 20rpx}
.answers{margin: 30rpx 0;padding:25rpx ;border: 1px solid #F2F3F5;border-radius: 10rpx;background: #FAFBFC}
.answer{background: #F8F6F3;color:#B19B80;border: 1rpx solid #B19B80;font-weight: bold;}
.next{padding: 10rpx 100rpx;letter-spacing: 4px;font-size: 36rpx; color:#ffffff;background: #B19B80; border-radius: 40rpx;display: inline-block;position: fixed;bottom:300rpx;left: 50%;transform: translateX(-50%)}
.toscore{padding: 10rpx 100rpx;letter-spacing: 4px;font-size: 36rpx; color:#ffffff;background: #B19B80; border-radius: 40rpx;display: inline-block;position: fixed;bottom: 100rpx;left: 50%;transform: translateX(-50%);font-weight: bold;}
.content{width: 660rpx;padding:0 45rpx;justify-content: space-around;align-items: center;margin-top: 100rpx;}
.iptbox{width: 105rpx;height: 100rpx;border:1rpx solid #ddd;box-sizing: border-box;color:#B19B80;font-weight: bold; background: #F3F4F6;
  display: inline-block;justify-content: center;align-items: center;text-align: center;}
.ipt{width: 0;height: 0;}
.btn-area{width: 80%;margin-top: 60rpx;}
.tipsimg{width: 40rpx;margin-right: 8rpx;}
.tipstxt{font-size: 30rpx;color:#B19B80;}
.tip{margin-top: 100rpx;padding-right:20rpx;}
.tipblock{position: fixed;bottom: 0;left: 0;width: 100%;height: 100%;background: rgba(0,0,0,0.4);z-index: 999999;}
.tipcontent{position: fixed;bottom: 0;left: 0;width: 100%;height:70%; background: #ffffff;border-top-left-radius: 10px;border-top-right-radius: 10px;}
.tiptop{width: 100%;padding: 25rpx;text-align: center;border-bottom: 1px solid #eee;position: relative;box-sizing: border-box;}
.chaimg{width: 40rpx;position: absolute;top: 50%;right: 20rpx;transform: translateY(-50%)}
.tiptxt{padding: 30rpx;}
.nexttitle{color: #f1f1f1;background: rgb(177, 155, 128);padding: 10rpx 22rpx;border-radius: 8rpx;font-size: 34rpx;font-weight: bold;}

.isFillinFalse{color: #CE535A;border: 1px solid #CE535A;background: rgba(206,83,90,0.2)}
.isFillinRight{color: #03C879;border: 1px solid #03C879;background: rgba(3,200,121,0.2)}
.answerAnalysis{margin-top: 60rpx;border-top: 1rpx solid #ddd;padding: 0 30rpx;}
.answerAnalysisTop{padding: 20rpx 0;border-bottom: 1rpx solid #ddd;}
.answerAnalysisTxt{font-size: 40rpx;}
.rightAnswer{font-size: 40rpx;font-weight: bold;padding: 30rpx 0;text-align: left;}
.answerTips{font-size: 38rpx;}
.difficultypre{padding: 0 30rpx;}
.difficulty{padding: 5rpx 10rpx;color: #ffffff;background: rgba(177,155,128,0.5);border-radius: 6rpx;font-size: 34rpx;margin-right: 30rpx;}
.oncefalse{background: rgba(206,83,90,0.5)}
.onceright{background: rgba(3,200,121,0.5)}

